<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.BloodGroupFragment">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_alignParentEnd="true"
            android:id="@+id/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is your blood group"
            android:textColor="#D62C2C2C"
            android:layout_below="@+id/logo"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/texttt"
            android:textStyle="bold"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texttt"
            android:layout_above="@+id/bottomLayout"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            android:id="@+id/bloodGroupLayout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="A+"
                    android:textColor="@color/colorPrimaryRed"
                    android:gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/round_text_bg"
                    android:id="@+id/aPostiveId" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="A-"
                    android:gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/round_text_bg"
                    android:textColor="@color/colorPrimaryRed"
                    android:id="@+id/aNegetiveId" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="B+"
                    android:gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/round_text_bg"
                    android:textColor="@color/colorPrimaryRed"
                    android:id="@+id/bPostiveId" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="B-"
                    android:gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/round_text_bg"
                    android:textColor="@color/colorPrimaryRed"
                    android:id="@+id/bNegetive" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="O+"
                    android:gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/round_text_bg"
                    android:textColor="@color/colorPrimaryRed"
                    android:id="@+id/oPositive" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="O-"
                    android:gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/round_text_bg"
                    android:textColor="@color/colorPrimaryRed"
                    android:id="@+id/oNegetive" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="85dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryRed"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="AB+"
                    android:gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/round_text_bg"
                    android:textColor="@color/colorPrimaryRed"
                    android:id="@+id/abPositive" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="AB-"
                    android:gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/round_text_bg"
                    android:textColor="@color/colorPrimaryRed"
                    android:id="@+id/abNegetive" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:id="@+id/bottomLayout"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="@string/nearestClinic"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true"
                android:layout_margin="20dp"
                android:layout_marginTop="50dp"
                android:id="@+id/forgotPassText"
                android:focusable="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:fontFamily="@font/nunito"
                android:textStyle="bold"
                android:layout_marginHorizontal="110dp"
                android:background="@drawable/button_bg"
                android:layout_marginBottom="5dp"
                android:id="@+id/nextBtnInBloodGroup" />


        </LinearLayout>


    </RelativeLayout>
</layout>